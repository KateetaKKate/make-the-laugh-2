        }


        .main {
            color: black;
            height: 100%;
            background-image: url(<%= image_path("dust_scratches.png") %>);
            flex: 1;
            font-family: fantasy;
        }

        /*　プレイヤー（再生バー）の高さ、幅、背景色の指定　*/
        .audiojs { height: 20; width: 100; }
        /*　再生・停止ボタンの高さ、幅、パディングの指定　*/
        .audiojs .play-pause { ... }
        /*　再生・停止ボタンなどの p 要素　*/
        .audiojs p { ... }
        /*　進行状態・ロードの状態を表示する部分　*/
        .audiojs .scrubber { ... }
        /*　進行状態を表示するバーの部分　*/
        .audiojs .progress { ... }
        /*　ロード状態を表示するバーの部分　*/
        .audiojs .loaded { ... }
        /*　再生時間の部分　*/
        .audiojs .time { ... }
        .audiojs .error-message { ... }
        /*　再生している曲の情報　*/
        .track-details { ... }
        .track-details:before { ... }

        .items {
            display: flex;
            justify-content: space-between;
            flex-wrap: wrap;
            text-align: center;
        }
        .items:after {
            content:"";
            display:block;
            width: 32%;
            height:0;
        }
        .item {
            width: 32%;
            height: 280px;
            margin-bottom: 1%;
            margin-top: 1%;
        }
        
        .item {
            position: relative;
            /* margin: 0 10px; */
        }
        /* 線の基点位置 */
        .item::before,
        .item::after {
            content: "";
            position: absolute;
            width: 0;
            height: 2px;
            background: rgb(100, 100, 100);
            transition: all 0.2s linear;
            transition-delay: 0.2s;
        }
        .item::before {
            right: 0;
            top: 0;
        }
        .item::after {
            left: 0;
            bottom: 0;
        }
        .item span{
            display: block;
        }

        .item span::before,
        .item span::after{
            content:"";
            /*絶対配置で線の位置を決める*/
            position: absolute;
            /*線の形状*/
            width:2px;
            height:0;
            background: rgb(100, 100, 100);
        /*アニメーションの指定*/
            transition: all 0.2s linear;
        }

        .item span::before{
            left: 0;
            top: 0;
        }
        .item span::after{
            right: 0;
            bottom: 0;
        }
        .item:hover::before,
        .item:hover::after {
            width: 100%;
        }
        .item:hover span::before,
        .item:hover span::after {
            height: 100%;
        }


        .footer {
            background-color: rgb(80, 80, 80);
            color: white;
            height: 70px;
        }

        .footer-logo {
            float: left;
            font-size: 15px;
            padding: 23px 10px 24px 10px;
        }      
    </style>
</head>
